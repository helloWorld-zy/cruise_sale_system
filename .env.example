# Docker development environment override
# Copy to .env and fill in real values. Never commit .env.

# Server
CRUISE_SERVER_PORT=:8080
CRUISE_SERVER_MODE=debug

# Database — also used by docker-compose
POSTGRES_USER=cruise
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD
POSTGRES_DB=cruise_booking
POSTGRES_PORT=15432

CRUISE_DATABASE_HOST=localhost
CRUISE_DATABASE_PORT=15432
CRUISE_DATABASE_USER=cruise
CRUISE_DATABASE_PASSWORD=CHANGE_ME_DB_PASSWORD
CRUISE_DATABASE_DBNAME=cruise_booking
CRUISE_DATABASE_SSLMODE=disable
CRUISE_DATABASE_MAXIDLECONNS=10
CRUISE_DATABASE_MAXOPENCONNS=100
CRUISE_DATABASE_CONNMAXLIFETIME=300

# Redis — also used by docker-compose
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

CRUISE_REDIS_HOST=localhost
CRUISE_REDIS_PORT=6379
CRUISE_REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
CRUISE_REDIS_DB=0

# MinIO — also used by docker-compose
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD

CRUISE_MINIO_ENDPOINT=localhost:9000
CRUISE_MINIO_ACCESSKEY=minioadmin
CRUISE_MINIO_SECRETKEY=CHANGE_ME_MINIO_PASSWORD
CRUISE_MINIO_BUCKET=cruise-static
CRUISE_MINIO_USESSL=false

# Meilisearch — also used by docker-compose
MEILI_MASTER_KEY=CHANGE_ME_MEILI_KEY
MEILI_ENV=development

CRUISE_MEILIS_HOST=http://localhost:7700
CRUISE_MEILIS_APIKEY=CHANGE_ME_MEILI_KEY

# NATS
CRUISE_NATS_URL=nats://localhost:4222

# Auth
CRUISE_JWT_SECRET=CHANGE_ME_JWT_SECRET_MIN_32_CHARS
CRUISE_JWT_EXPIREHOURS=24

# Logs
CRUISE_LOG_LEVEL=debug
CRUISE_LOG_FILENAME=logs/app.log
CRUISE_LOG_MAXSIZE=100
CRUISE_LOG_MAXBACKUPS=3
CRUISE_LOG_MAXAGE=7
CRUISE_LOG_COMPRESS=true
